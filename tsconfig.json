{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "strict": true,
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "lib": [
            "es2022",
            "dom",
            "dom.iterable"
        ]
    }
}
